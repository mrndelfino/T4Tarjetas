@model T4Tarjetas.Models.Tarjeta

@{
    ViewBag.Title = "Create";

    var prv = new T4Tarjetas.Models.Proveedor();
}

@section Header{
    <link rel="stylesheet" href="/Content/tarjeta.css" type="text/css"/>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <nav class="navbar navbar-light">
        <a class="navbar-brand" href="#">
            <img src="~/Images/logoswift.png" width="80" height="80" class="d-inline-block align-top" alt="">
        </a>
    </nav>
    <div class="container" align="center">
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.NroTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NroTarjeta, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.NroTarjeta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.IDUsuario, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.IDUsuario, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.IDUsuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.CodTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CodTarjeta, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                    @Html.ValidationMessageFor(model => model.CodTarjeta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NomTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NomTarjeta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomTarjeta, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group" style="display:none">
                @Html.LabelFor(model => model.FecCre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FecCre, new { htmlAttributes = new { @class = "form-control", @readonly = true, @Value = Model.FecCre } })
                    @Html.ValidationMessageFor(model => model.FecCre, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FecVen, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FecVen, new { htmlAttributes = new { @class = "form-control", @readonly = true, @Value = Model.FecVen } })
                    @Html.ValidationMessageFor(model => model.FecVen, "", new { @class = "text-danger" })                    
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MontoTarjeta, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.MontoTarjeta, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MontoTarjeta, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- combo de proveedores -->
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputSelectProveedor">Proveedores</label>
                </div>
                @Html.DropDownListFor(model => model.IDProveedor, (List<SelectListItem>)ViewBag.Proveedores, new { @class = "custom-select", @id = "inputSelectProveedor" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-success" />
                </div>
            </div>
        </div>
        <br/>
        <br/>
        <div class="container" align="center">
            <div class="wrapper">
                <div class="cards">
                    <div class="face">
                        <div class="head">
                            <div class="title">
                                @*Nombre de la tarjeta*@
                            </div>                           
                        </div>
                        <div class="main">
                            <div class="number-title">Numero de tarjeta:</div>
                            <div class="number">@Html.DisplayFor(x => x.NroTarjeta)</div>
                        </div>
                        <div class="date">
                            <div class="end">
                                @Model.FecVen.Month/@Model.FecVen.Year
                            </div>
                        </div>
                    </div>
                    <div class="back">
                        <div class="magnetic-line">
                        </div>
                        <div class="cvv">
                            CVV: @Html.DisplayFor(x => x.CodTarjeta)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<br />
<div>
    <button class="btn btn-primary" type="button" onclick="location.href='@Url.Action("Details", "Tarjeta", new { id = Session["IDUsuario"] })';">Detalles</button>
</div>
<br />
@Html.ActionLink("Volver", "Dashboard", "Usuario")

@section Scripts{
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

